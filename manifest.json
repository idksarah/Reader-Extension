{
    "name": "Pronunciation and Definition",
    "version": "1.1.0",
    "description": "Provides the pronunciation and definition of highlighted words",
    "permissions":[
        "activeTab",
        "contextMenus",
        "tabs",
        "tts",
        "storage"
    ],
    "manifest_version": 3,
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Reader",
        "default_icon": "toro.jpg"
    },
    "background": {
        "service_worker": "background.js"
    }
}