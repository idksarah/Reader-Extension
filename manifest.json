{
    "name": "STRWBRY: Translations and Pronunciation",
    "version": "1.1.0",
    "description": "Primarily for students/parents who know Spanish and are learning English. STRWBRY, after the user highlights a word, creates a popup showing that word's spelling, Spanish translation, and pronunciation.",
    "permissions":[
        "contextMenus",
        "tts"
    ],
    "manifest_version": 3,
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Reader"
    },
    "icons": {
      "16": "cake16.png",
      "32": "cake32.png",
      "48": "cake48.png",
      "128": "cake128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
          "resources": ["volumeIcon.png"],
          "matches": ["<all_urls>"]
      }
  ]
}